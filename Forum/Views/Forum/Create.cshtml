@model Forum.Models.Forum.AddForumModel
<div class="container mt-3">
    <h2 class="title is-4">Create a Forum</h2>
    <form asp-controller="Forum" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="field">
            <label class="label" asp-for="Title"></label>
            <div class="control">
                <input class="input" type="text" placeholder="Add Title" asp-for="Title">
                <span class="help is-danger" asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="field">
            <label class="label" asp-for="Description"></label>
            <div class="control">
                <textarea class="textarea" placeholder="Add Description" asp-for="Description"></textarea>
                <span class="help is-danger" asp-validation-for="Description"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="ImageUpload" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>
        <div class="field">
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>

        @section Scripts {
            <script>$(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });</script>
        }
    </form>
</div>