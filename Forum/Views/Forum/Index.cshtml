@model Forum.Models.Forum.ForumIndexModel
@*1. List all forum*@

    <div class="container mt-3">
        <h2 class="mb-3 title is-2 is-spaced">Forums</h2>
        <table class="table is-fullwidth">
            <tbody>
                @foreach (var forum in Model.forums)
                {
                <tr>
                    <td>
                        <img src="images/@forum.ImageUrl" width="50" height="50"/>
                    </td>
                    <td><a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">@forum.Title</a></td>
                    <td>@forum.Description</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
